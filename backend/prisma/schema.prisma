generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Volunteer {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String?
  message   String?
  createdAt DateTime @default(now())
}

model Subscriber {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  createdAt DateTime @default(now())
}

model Donation {
  id            Int      @id @default(autoincrement())
  stripeSession String   @unique
  amount        Int
  status        String   @default("pending")
  donorEmail    String?
  createdAt     DateTime @default(now())
}
